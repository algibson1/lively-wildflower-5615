<h1>Guest: <%= @guest.name %></h1>

<%= form_with url: "/guests/#{@guest.id}", method: :post, local: true do |form| %>
  <%= form.label "Add room for this guest:" %>
  <%= form.number_field :room_id %>
  <%= form.submit "Submit" %>
<% end %>

<p>This guest has stayed in the following rooms:</p><br>

<% @guest.rooms.each do |room| %>
  <div id="room-<%= room.id %>">
    <p><%= room.suite %> Suite </p>
    <p>Rate: <%= room.rate %> per night</p>
    <p>Hotel: <%= room.hotel.name %>
    <br>
    <br>
<% end %>